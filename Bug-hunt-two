#!/usr/bin/env bash
# Termux Security Toolkit - Auto Installation Script (cleaned)
# Ensures compatibility with pkg and apt package managers only.
# Adds defensive bash options and consistent formatting.
# Linked with Bug-Hunt runner structure.
# =======================================================================
set -euo pipefail
IFS=$'\n\t'

RED='\033[0;31m'; YELLOW='\033[0;33m'; GREEN='\033[0;32m'; CYAN='\033[0;36m'; RESET='\033[0m'

# Banner function for user feedback
banner() {
  echo -e "${CYAN}===========================================${RESET}"
  echo -e "${CYAN}      Termux Security Toolkit v1.0         ${RESET}"
  echo -e "${CYAN}===========================================${RESET}"
}

# Privilege escalation logic
try_superuser() {
  if [ "${EUID:-$(id -u)}" -ne 0 ]; then
    echo -e "${YELLOW}[*] Not running as root. Attempting to escalate...${RESET}"
    if command -v tsu >/dev/null 2>&1; then
      tsu || echo -e "${YELLOW}[!] tsu failed, continuing without root.${RESET}"
    elif command -v sudo >/dev/null 2>&1; then
      sudo -v || echo -e "${YELLOW}[!] sudo failed, continuing without root.${RESET}"
    else
      echo -e "${YELLOW}[!] No root escalation tool found. Some tools may not work fully.${RESET}"
    fi
  else
    echo -e "${GREEN}[✓] Already running as root.${RESET}"
  fi
}

pkg_manager() {
  if command -v pkg >/dev/null 2>&1; then echo pkg; elif command -v apt >/dev/null 2>&1; then echo apt; else echo ""; fi
}

install_core_packages() {
  echo -e "${YELLOW}[*] Installing core packages and dependencies...${RESET}"
  local PM
  PM=$(pkg_manager)
  if [ -z "$PM" ]; then echo -e "${RED}[✗] No supported package manager (pkg/apt) found.${RESET}"; return 1; fi

  $PM update -y || true
  $PM upgrade -y || true

  local pkgs=(git wget curl python ruby nmap hydra aircrack-ng hashcat john sqlmap nikto)
  for p in "${pkgs[@]}"; do $PM install -y "$p" || echo -e "${YELLOW}[!] Failed to install $p${RESET}"; done

  if command -v pip >/dev/null 2>&1; then
    pip install --upgrade pip || true
    pip install brut3k1t || true
  fi

  if command -v gem >/dev/null 2>&1; then
    for g in wpscan evil-winrm snmp; do
      if ! gem list | grep -q "^${g} "; then gem install "$g" --no-document || true; fi
    done
  fi

  if ! command -v searchsploit >/dev/null 2>&1; then
    git clone https://github.com/offensive-security/exploitdb.git "$HOME/exploitdb" 2>/dev/null || true
    ln -sf "$HOME/exploitdb/searchsploit" /usr/local/bin/searchsploit 2>/dev/null || true
  fi

  echo -e "${GREEN}[✓] Core packages and dependencies processed.${RESET}"
}

banner
try_superuser
install_core_packages
